<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#000000">

    <EditText
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:padding="5dip"
            android:id="@+id/password_et"
            android:autofillHints="" android:hint=" Password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/username_et" app:layout_constraintHorizontal_bias="0.49"
            android:textColor="#FFFFFF" android:background="@drawable/border_textedit" android:textColorHint="#96FFFFFF"/>
    <EditText
            android:layout_width="248dp"
            android:layout_height="45dp"
            android:inputType="textNoSuggestions|text"
            android:text="@string/username"
            android:ems="10"
            android:padding="5dip"
            android:id="@+id/username_et"
            android:autofillHints="" android:hint=" Username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.496"
            android:textColor="#FFFFFF" android:background="@drawable/border_textedit" android:textColorHint="#97FFFFFF"
            android:textColorHighlight="#FF9800" android:textColorLink="#FFC107"
    />
    <TextView
            android:text="@string/ingresa"
            android:layout_width="239dp"
            android:layout_height="46dp"
            android:id="@+id/textView2" android:visibility="visible"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="30sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.455"
            android:textColor="#FFFFFF"/>
    <Button
            android:text="Login"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:id="@+id/button"
            android:textColor="#FFFFFFFF" android:background="@drawable/border_button"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.489" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/password_et" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>