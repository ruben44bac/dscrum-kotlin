<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".Activities.IterationActivity">


    <com.ramotion.fluidslider.FluidSlider
            android:id="@+id/fluidSlider"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"

            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:size="normal"
            app:bar_color="#3D3D3D"
            app:duration="@android:integer/config_mediumAnimTime"
            tools:targetApi="lollipop"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/edit_iteration"
            app:bubble_color="#9C27B0" app:bubble_text_color="#FFFFFF"/>
    <ImageView
            android:layout_width="137dp"
            android:layout_height="123dp" tools:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/image_iteration" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:padding="10dp"
            android:background="@drawable/border_textedit"
            android:id="@+id/edit_iteration"
            android:layout_marginBottom="24dp"

            android:textColor="#FDFDFD"
            android:hint="Comentarios"
            android:textColorHint="#C4FFFFFF"


            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/button_iteration"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="Enviar calificaciÃ³n"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="#FFF"
            android:background="@drawable/border_buttom"
            android:id="@+id/button_iteration" android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="Nombre"
            android:layout_width="331dp"
            android:layout_height="36dp"
            android:id="@+id/text_difficulty"
            android:layout_marginBottom="8dp"
            android:textColor="#FFF"
            android:gravity="center"
            android:textSize="25dp"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/fluidSlider" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/image_iteration" app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>