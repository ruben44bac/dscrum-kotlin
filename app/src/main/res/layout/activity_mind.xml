<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MindActivity">
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars[1]"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/mind_image_1"
            android:layout_marginEnd="52dp" android:layout_marginTop="112dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars[1]"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/mind_image_2"
            app:layout_constraintHorizontal_bias="0.901" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toStartOf="@+id/mind_image_1"
            android:layout_marginEnd="8dp"/>
    <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp" tools:srcCompat="@tools:sample/avatars[1]"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/mind_image_3"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mind_image_2" app:layout_constraintVertical_bias="0.039"
            app:layout_constraintEnd_toStartOf="@+id/mind_image_1" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.909"/>
    <TextView
            android:text="¿Con qué estado te identificas en este momento?"
            android:layout_width="302dp"
            android:layout_height="57dp"
            android:textColor="@color/button_text_color"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>